<div class="education">
	<div class="form-group"></div>
  <div class="form-group">
  	<label for="schoolName1">School Name</label>
	  <%= text_field_tag 'schools[]', nil, class: "form-control" %>
  </div>

	<div class="form-group"></div>

  <label for="cityEducation1">City</label>
	<div class="form-inline">
	  <div class="form-group">
	  	
		  <%= text_field_tag 'city_education[]', nil, class: "form-control" %>
	  </div>	
	  <div class="form-group">
		  <%= select_tag 'state_education[]', options_for_select(@states), prompt: "State", class: "form-control" %>
	  </div>
	</div>

	<div class="form-group"></div>	

	<label for="graduationDate1">Graduation Year</label>
	<div class="form-inline">
	  <div class="form-group">
		  <%= text_field_tag 'year_graduation[]', nil, :maxlength => 4, :size => 4, class: "form-control", placeholder: 'YYYY' %>
	  </div>
	</div>

	<div class="form-group"></div>

	<div class="row">
	  <div class="form-group col-xs-3 col-md-3">
	      <label for="name" class="control-label">Degree Name</label>
	      <%= text_field_tag 'degree_name[]', nil, class: "form-control", placeholder: "Degree Name" %>
	  </div>
	  <div class="form-group col-xs-3 col-md-3">
	      <label for="name" class="control-label">Degree Abbreviation</label>
	      <%= text_field_tag 'degree_abbreviations[]', nil, class: "form-control", placeholder: "Degree Abbreviation" %>
	  </div>
	  <div class="form-group col-xs-3 col-md-3 checkInLine">
	      <%= check_box_tag 'degree_abbreviations_featured[]' %> Featured
	  </div>
	</div>
</div>
